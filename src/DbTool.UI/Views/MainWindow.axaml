<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DbTool.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="DbTool.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="DbTool - Database Backup &amp; Restore"
        Width="1000" Height="700"
        MinWidth="800" MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto">
        <!-- Main Content -->
        <TabControl Grid.Row="0" Margin="10">
            
            <!-- Connections Tab -->
            <TabItem Header="ðŸ“ Connections">
                <Grid ColumnDefinitions="*,Auto,2*" Margin="10">
                    
                    <!-- Connections List -->
                    <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="10">
                        <Grid RowDefinitions="Auto,*,Auto">
                            <TextBlock Grid.Row="0" Text="Database Connections" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            
                            <ListBox Grid.Row="1" 
                                     ItemsSource="{Binding Connections}" 
                                     SelectedItem="{Binding SelectedConnection}"
                                     MinHeight="200">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Engine}" FontSize="10" Foreground="Gray"/>
                                            <TextBlock FontSize="10" Foreground="Gray">
                                                <Run Text="{Binding Host}"/>:<Run Text="{Binding Port}"/>/<Run Text="{Binding DatabaseName}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                <Button Content="ðŸ”„ Refresh" Command="{Binding LoadConnectionsCommand}" Margin="0,0,5,0" Padding="10,5"/>
                                <Button Content="ðŸ§ª Test" Command="{Binding TestConnectionCommand}" Margin="0,0,5,0" Padding="10,5"/>
                                <Button Content="ðŸ—‘ï¸ Delete" Command="{Binding DeleteConnectionCommand}" Padding="10,5"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <GridSplitter Grid.Column="1" Width="10" ResizeDirection="Columns"/>
                    
                    <!-- Add Connection Form -->
                    <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="10">
                        <ScrollViewer>
                            <StackPanel>
                                <TextBlock Text="Add New Connection" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                                
                                <TextBlock Text="Connection Name:" Margin="0,5,0,3"/>
                                <TextBox Text="{Binding ConnectionName}" Watermark="e.g., production"/>
                                
                                <TextBlock Text="Database Engine:" Margin="0,10,0,3"/>
                                <ComboBox ItemsSource="{Binding AvailableEngines}" 
                                          SelectedItem="{Binding SelectedEngine}"
                                          HorizontalAlignment="Stretch"/>
                                
                                <TextBlock Text="Host:" Margin="0,10,0,3"/>
                                <TextBox Text="{Binding Host}" Watermark="localhost"/>
                                
                                <TextBlock Text="Port:" Margin="0,10,0,3"/>
                                <NumericUpDown Value="{Binding Port}" Minimum="1" Maximum="65535" Increment="1" FormatString="0"/>
                                
                                <TextBlock Text="Database Name:" Margin="0,10,0,3"/>
                                <TextBox Text="{Binding DatabaseName}" Watermark="myapp"/>
                                
                                <TextBlock Text="Username:" Margin="0,10,0,3"/>
                                <TextBox Text="{Binding Username}" Watermark="dbuser"/>
                                
                                <TextBlock Text="Password:" Margin="0,10,0,3"/>
                                <TextBox Text="{Binding Password}" PasswordChar="*" Watermark="password"/>
                                
                                <Button Content="âž• Add Connection" 
                                        Command="{Binding AddConnectionCommand}" 
                                        HorizontalAlignment="Stretch"
                                        Margin="0,20,0,0"
                                        Padding="0,10"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Backup Tab -->
            <TabItem Header="ðŸ’¾ Backup">
                <Grid ColumnDefinitions="2*,Auto,3*" Margin="10">
                    
                    <!-- Backup Controls -->
                    <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Create Backup" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                            
                            <TextBlock Text="Select Connection:" Margin="0,5,0,3"/>
                            <ComboBox ItemsSource="{Binding Connections}" 
                                      SelectedItem="{Binding SelectedConnection}"
                                      HorizontalAlignment="Stretch">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            
                            <TextBlock Text="Output Directory (optional):" Margin="0,15,0,3"/>
                            <TextBox Text="{Binding OutputDirectory}" Watermark="Leave empty for default"/>
                            
                            <Button Content="ðŸ’¾ Create Backup" 
                                    Command="{Binding CreateBackupCommand}" 
                                    HorizontalAlignment="Stretch"
                                    Margin="0,20,0,0"
                                    Padding="0,15"
                                    FontSize="14"
                                    FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    
                    <GridSplitter Grid.Column="1" Width="10" ResizeDirection="Columns"/>
                    
                    <!-- Backups List -->
                    <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="10">
                        <Grid RowDefinitions="Auto,*,Auto">
                            <TextBlock Grid.Row="0" Text="Backup History" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            
                            <ListBox Grid.Row="1" 
                                     ItemsSource="{Binding Backups}" 
                                     SelectedItem="{Binding SelectedBackup}"
                                     MinHeight="200">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,5">
                                            <TextBlock FontWeight="Bold">
                                                <Run Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding FilePath}" FontSize="10" Foreground="Gray"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontSize="10" Foreground="Gray">
                                                    <Run Text="Size: "/>
                                                    <Run Text="{Binding FileSizeBytes}"/>
                                                    <Run Text=" bytes"/>
                                                </TextBlock>
                                                <TextBlock Text=" | " FontSize="10" Foreground="Gray" Margin="5,0"/>
                                                <TextBlock FontSize="10" Foreground="Gray">
                                                    <Run Text="Status: "/>
                                                    <Run Text="{Binding Status}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <Button Grid.Row="2" 
                                    Content="ðŸ”„ Refresh List" 
                                    Command="{Binding LoadBackupsCommand}" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,10,0,0"
                                    Padding="15,5"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Restore Tab -->
            <TabItem Header="âš™ï¸ Restore">
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="20" Margin="10">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Restore Database" FontWeight="Bold" FontSize="18" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                        
                        <Border Background="#FFF3CD" BorderBrush="#FFC107" BorderThickness="2" CornerRadius="4" Padding="10" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="âš ï¸ Warning" FontWeight="Bold" Foreground="#856404"/>
                                <TextBlock Text="Restoring a backup will overwrite all existing data in the target database." 
                                           TextWrapping="Wrap" Foreground="#856404" Margin="0,5,0,0"/>
                                <TextBlock Text="Make sure you have selected the correct connection and backup file." 
                                           TextWrapping="Wrap" Foreground="#856404" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="Select Connection:" Margin="0,10,0,5"/>
                        <ComboBox ItemsSource="{Binding Connections}" 
                                  SelectedItem="{Binding SelectedConnection}"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock FontSize="10" Foreground="Gray">
                                            <Run Text="{Binding Engine}"/>
                                            <Run Text=" - "/>
                                            <Run Text="{Binding Host}"/>:<Run Text="{Binding Port}"/>/<Run Text="{Binding DatabaseName}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <TextBlock Text="Backup File Path:" Margin="0,20,0,5"/>
                        <TextBox Text="{Binding RestoreFilePath}" 
                                 Watermark="Path to .sql backup file"
                                 HorizontalAlignment="Stretch"/>
                        
                        <Button Content="âš™ï¸ Restore Database" 
                                Command="{Binding RestoreBackupCommand}" 
                                HorizontalAlignment="Stretch"
                                Margin="0,30,0,0"
                                Padding="0,15"
                                FontSize="14"
                                FontWeight="Bold"
                                Background="#DC3545"
                                Foreground="White"/>
                    </StackPanel>
                </Border>
            </TabItem>
            
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="1" Background="#F0F0F0" BorderBrush="Gray" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid ColumnDefinitions="Auto,*">
                <ProgressBar Grid.Column="0" 
                             IsIndeterminate="True" 
                             IsVisible="{Binding IsBusy}"
                             Width="100" 
                             Height="20"
                             Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" 
                           Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center"
                           FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>
